{
  "name": "bp100",
  "version": "0.1.0",
  "private": true,
  "license": "LGPL-3.0",
  "packageManager": "yarn@3.2.2",
  "devDependencies": {
    "@types/glob-to-regexp": "^0.4.1",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.14",
    "@types/prettier": "^2.7.0",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "concurrently": "^7.3.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.23.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-recommended": "^4.1.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob-to-regexp": "^0.4.1",
    "javascript-stringify": "^2.1.0",
    "jest": "^28.1.3",
    "lua-types": "^2.13.0",
    "lua-wasm-bindings": "^0.3.1",
    "luassert-tstl": "^0.3.0-experimental.10",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "testorio": "^1.4.0",
    "testorio-tools": "^0.3.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "ts-transformer-keys": "^0.4.3",
    "typed-factorio": "^1.8.1",
    "typescript": "~4.8.2",
    "typescript-to-lua": "^1.10.0",
    "typescript-tstl-plugin": "^0.3.2"
  },
  "scripts": {
    "build:locale": "ts-node scripts/gen-locale-defs.ts",
    "build:gui-specs": "ts-node scripts/gen-gui-specs.ts",
    "build:scripts": "concurrently \"yarn build:locale\" \"yarn build:gui-specs\"",
    "build:release": "yarn build:scripts && tstl -p tsconfig-release.json",
    "prepare-package": "yarn clean && yarn build:release",
    "build": "yarn build:scripts && tstl",
    "watch": "tstl --watch",
    "watch:locale": "nodemon scripts/gen-locale-defs.ts",
    "clean": "del-cli \"src/**/*.lua\" \"src/**/*.map\" \"!**/*.def.lua\""
  },
  "nodemonConfig": {
    "watch": [
      "src/locale/en/*.cfg"
    ],
    "ext": "*",
    "execMap": {
      "ts": "ts-node"
    }
  }
}

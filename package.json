    "eslint-config-recommended": "^4.1.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob-to-regexp": "^0.4.1",
    "javascript-stringify": "^2.1.0",
    "jest": "^28.1.2",
    "lua-types": "^2.11.0",
    "lua-wasm-bindings": "^0.2.3-rc.0",
    "luassert-tstl": "^0.3.0-experimental.8",
    "npm-watch": "^0.11.0",
    "prettier": "^2.7.1",
    "testorio": "^1.2.0",
    "testorio-tools": "^0.3.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typed-factorio": "^1.3.0",
    "typescript": "~4.7.4",
    "typescript-to-lua": "^1.6.1",
    "typescript-tstl-plugin": "^0.3.2"
  },
  "scripts": {
    "build:locale": "ts-node scripts/gen-locale-defs.ts",
    "build:gui-specs": "ts-node scripts/gen-gui-specs.ts",
    "build:scripts": "concurrently \"yarn build:locale\" \"yarn build:gui-specs\"",
    "build:release": "yarn build:scripts && tstl -p tsconfig-release.json",
    "prepare-package": "yarn deep-clean && yarn build:release",
    "build": "yarn build:scripts && tstl",
    "watch": "tstl --watch",
    "watch:locale": "npm-watch",
    "clean": "del-cli \"src/**/*.lua\" \"src/**/*.map\" \"!**/*.def.lua\""
  },
  "watch": {
    "build:locale": "src/locale/en/en.cfg"
  }
}

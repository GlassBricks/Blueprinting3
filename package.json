{
  "name": "bp100",
  "version": "0.1.0",
  "private": true,
  "license": "LGPL-3.0",
  "packageManager": "yarn@3.2.2",
  "devDependencies": {
    "@types/node": "^18.11.15",
    "@types/prettier": "^2.7.1",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "concurrently": "^7.6.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gb-tstl-utils": "^1.0.2",
    "lua-types": "^2.13.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "semver": "^7.3.8",
    "testorio": "^1.6.1",
    "testorio-tools": "^0.3.4",
    "ts-node": "^10.9.1",
    "tstl-expect": "^0.2.1",
    "typed-factorio": "^1.12.0",
    "typescript": "~4.9.4",
    "typescript-to-lua": "^1.11.1",
    "typescript-tstl-plugin": "^0.3.2"
  },
  "scripts": {
    "build:locale": "ts-node scripts/gen-locale-defs.ts",
    "build:gui-specs": "ts-node scripts/gen-gui-specs.ts",
    "build:scripts": "concurrently \"yarn build:locale\" \"yarn build:gui-specs\"",
    "build:release": "yarn build:scripts && tstl -p tsconfig-release.json",
    "build": "yarn build:scripts && tstl",
    "prepare-package": "yarn clean && yarn build:release",
    "watch": "tstl --watch",
    "watch:locale": "nodemon scripts/gen-locale-defs.ts",
    "clean": "del-cli \"src/**/*.lua\" \"src/**/*.map\" \"!**/*.def.lua\"",
    "version-minor": "ts-node scripts/bump-version.ts minor"
  },
  "nodemonConfig": {
    "watch": [
      "src/locale/en/*.cfg"
    ],
    "ext": "*",
    "execMap": {
      "ts": "ts-node"
    }
  }
}

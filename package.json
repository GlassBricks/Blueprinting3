{
  "name": "bp100",
  "version": "0.1.0",
  "private": true,
  "license": "LGPL-3.0",
  "packageManager": "yarn@3.2.2",
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "concurrently": "^7.6.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "factoriomod-debug": "^1.1.28",
    "gb-tstl-utils": "^1.0.2",
    "lua-types": "^2.13.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "semver": "^7.3.8",
    "testorio": "^1.6.2",
    "testorio-tools": "^0.3.4",
    "ts-node": "^10.9.1",
    "tstl-expect": "^0.3.5",
    "typed-factorio": "^1.13.0",
    "typescript": "~4.9.5",
    "typescript-to-lua": "^1.13.1",
    "typescript-tstl-plugin": "^0.3.2"
  },
  "scripts": {
    "build:locale": "ts-node scripts/gen-locale-defs.ts",
    "build:gui-specs": "ts-node scripts/gen-gui-specs.ts",
    "build:scripts": "concurrently \"yarn build:locale\" \"yarn build:gui-specs\"",
    "build:release": "yarn build:scripts && tstl -p tsconfig-release.json",
    "build": "yarn build:scripts && tstl",
    "prepare-package": "yarn clean && yarn build:release",
    "watch": "tstl --watch",
    "watch:release-build": "tstl --watch -p tsconfig-release.json",
    "watch:locale": "nodemon scripts/gen-locale-defs.ts",
    "clean": "del-cli \"src/**/*.lua\" \"src/**/*.map\" \"!**/*.def.lua\"",
    "version-minor": "ts-node scripts/bump-version.ts minor"
  },
  "nodemonConfig": {
    "watch": [
      "src/locale/en/*.cfg"
    ],
    "ext": "*",
    "execMap": {
      "ts": "ts-node"
    }
  }
}
